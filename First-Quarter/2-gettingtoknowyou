#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

int main() {
    string firstName, lastName, nickname;
    double targetGrade;
    
    cout << "Enter your first name: ";
    getline(cin, firstName);
    cout << "Enter your last name: ";
    getline(cin, lastName);
    cout << "Enter your nickname: ";
    getline(cin, nickname);
   
    cout << "Welcome," << " " << firstName << " "<< "'" << nickname << "'" << " " << lastName << "!" ;
    
    cout << "\nWhat is your target grade? ";
    cin >> targetGrade;
    
    cout << fixed << setprecision(2) << "Your target grade is: " << double(targetGrade);

    return 0;
}